{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,                      
    "emitDecoratorMetadata": true,                      
    "module": "commonjs",                               
    "baseUrl": "./src",                                 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
    },                                        
    "typeRoots": [
      "./src/@types",
      "node_modules/@types"
    ],                                                   
    "resolveJsonModule": true,                         
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": false,                                     
    "skipLibCheck": true
  }
}